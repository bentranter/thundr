<div class="department-body">
  <div class="pure-g">
    <div class="pure-u">
      <ul class="breadcrumb">
        <li>
          <%= link_to('Home', root_url, {}) %>
          <span class="divider">-</span>
        </li>
        <li class="active">
          Search results for: <%= '"'+params[:q]+'"' %>
        </li>

      </ul>
      <h1>
        <%#= link_to(@department.deptCode+' - '+@department.deptName, '/departments/'+@department.deptCode, {}) %>
      </h1>


    </div>
  </div>

  <div class='list-container'>

    <table class='table-list'>
      <header>
        <h3 class="muted">
          courses
        </h3>
      </header>
      <tbody>
      <% @courses.each do |c| %>
          <tr>
            <td>
              <div class='table-list-row'>
                <div class="pure-g">
                  <div class="pure-u-1-4">
                    <%= c.department %>-<%= c.code %>
                  </div>

                  <div class="pure-u-1-2">

                    <%= link_to('/courses'+'/'+c.department+'/'+c.code, {class: 'ununderlinable'}) do %>
                                <span class="underlinable" style='margin-right: 9px'>
                                    <%= c.name %>
                                </span>
                        <% if c.all_seasons.include? 'F' %>
                                    <span class="season-tag season-Fall">
                                      Fall
                                    </span>
                        <% end %>
                        <% if c.all_seasons.include? 'W' %>
                                    <span class="season-tag season-Winter">
                                      Winter
                                    </span>
                        <% end %>
                        <% if c.all_seasons.include? 'S' %>
                                    <span class="season-tag season-Summer">
                                      Summer
                                    </span>
                        <% end %>
                    <% end %>
                  </div>

                  <div class="pure-u-1-4">
                    <%= c.credits %>
                  </div>
                </div>
              </div>
            </td>
          </tr>
      <% end %>

      </tbody>
    </table>
  </div>
</div>
